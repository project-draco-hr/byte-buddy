{
  try {
    return new ClassReloadingStrategy((Instrumentation)ClassLoader.getSystemClassLoader().loadClass(BYTE_BUDDY_AGENT_TYPE).getDeclaredMethod(GET_INSTRUMENTATION_METHOD).invoke(STATIC_METHOD));
  }
 catch (  Exception exception) {
    throw new IllegalStateException("The Byte Buddy agent is not installed or not accessible",exception);
  }
}
