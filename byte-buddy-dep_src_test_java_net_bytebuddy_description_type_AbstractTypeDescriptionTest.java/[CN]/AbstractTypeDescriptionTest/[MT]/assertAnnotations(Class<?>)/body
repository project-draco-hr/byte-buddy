{
  assertThat(describe(type).getDeclaredAnnotations(),hasItems(new AnnotationList.ForLoadedAnnotation(type.getDeclaredAnnotations()).toArray(new AnnotationDescription[type.getDeclaredAnnotations().length])));
  assertThat(describe(type).getDeclaredAnnotations().size(),is(type.getDeclaredAnnotations().length));
  assertThat(describe(type).getInheritedAnnotations(),hasItems(new AnnotationList.ForLoadedAnnotation(type.getAnnotations()).toArray(new AnnotationDescription[type.getAnnotations().length])));
  assertThat(describe(type).getInheritedAnnotations().size(),is(type.getAnnotations().length));
}
