{
  TypeList parameterTypes=methodDescription.getParameters().asTypeList();
  List<ElementMatcher<TypeDescription>> matchers=new ArrayList<ElementMatcher<TypeDescription>>(parameterTypes.size());
  for (  TypeDescription typeDescription : parameterTypes) {
    matchers.add(isSubTypeOf(typeDescription));
  }
  return (methodDescription.isStatic() ? ElementMatchers.<T>isStatic() : ElementMatchers.<T>not(isStatic())).<T>and(named(methodDescription.getSourceCodeName())).<T>and(returns(isSubTypeOf(methodDescription.getReturnType()))).and(takesArguments(new CollectionOneToOneMatcher<TypeDescription>(matchers)));
}
