{
  ClassReader classReader=new ClassReader(binaryRepresentation);
  ClassWriter classWriter=FrameComputingClassWriter.of(classReader,classVisitorWrapper.mergeWriter(ASM_NO_FLAGS),classFileLocator);
  classReader.accept(writeTo(classVisitorWrapper.wrap(instrumentedType,new ValidatingClassVisitor(classWriter)),implementationContext),classVisitorWrapper.mergeReader(ASM_NO_FLAGS));
  return classWriter.toByteArray();
}
