{
  MethodMatcher arrayMatcher=nameContains("Array");
  if (type.isArray()) {
    type=type.getComponentType();
  }
 else {
    arrayMatcher=not(arrayMatcher);
  }
  methodDescription=new TypeDescription.ForLoadedType(Sample.class).getDeclaredMethods().filter(nameStartsWith(type.getSimpleName().toLowerCase()).and(arrayMatcher)).getOnly();
  this.castType=castType;
  this.expectedLoaded=expectedLoaded;
  this.expected=expected;
}
