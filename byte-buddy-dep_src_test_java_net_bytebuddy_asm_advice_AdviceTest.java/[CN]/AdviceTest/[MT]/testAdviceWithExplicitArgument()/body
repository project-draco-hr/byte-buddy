{
  Class<?> type=new ByteBuddy().redefine(Sample.class).visit(new AsmVisitorWrapper.ForDeclaredMethods().method(named(QUX),Advice.to(ArgumentAdviceExplicit.class))).make().load(null,ClassLoadingStrategy.Default.WRAPPER).getLoaded();
  assertThat(type.getDeclaredMethod(QUX,String.class,String.class).invoke(type.newInstance(),FOO,BAR),is((Object)(FOO + BAR)));
}
