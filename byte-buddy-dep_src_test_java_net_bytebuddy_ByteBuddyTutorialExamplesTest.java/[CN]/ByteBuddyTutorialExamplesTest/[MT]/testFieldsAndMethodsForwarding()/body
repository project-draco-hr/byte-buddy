{
  MemoryDatabase memoryDatabase=new MemoryDatabase();
  MemoryDatabase loggingDatabase=new ByteBuddy().subclass(MemoryDatabase.class).method(named("load")).intercept(MethodDelegation.to(new ForwardingLoggerInterceptor(memoryDatabase)).appendParameterBinder(Pipe.Binder.install(Forwarder.class))).make().load(getClass().getClassLoader(),ClassLoadingStrategy.Default.WRAPPER).getLoaded().getConstructor().newInstance();
  assertThat(loggingDatabase.load("qux"),is(Arrays.asList("qux: foo","qux: bar")));
}
