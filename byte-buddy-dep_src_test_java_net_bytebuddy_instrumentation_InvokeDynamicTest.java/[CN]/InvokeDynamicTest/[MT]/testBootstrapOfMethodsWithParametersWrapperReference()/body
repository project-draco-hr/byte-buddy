{
  Class<?> type=classLoader.loadClass(ARGUMENT_BOOTSTRAP);
  TypeDescription typeDescription=new TypeDescription.ForLoadedType(type);
  Object value=new Object();
  DynamicType.Loaded<Simple> dynamicType=instrument(Simple.class,InvokeDynamic.bootstrap(typeDescription.getDeclaredMethods().filter(named(BOOTSTRAP)).getOnly()).invoke(BAR,String.class).withoutImplicitArguments().withReference(BOOLEAN,BYTE,SHORT,CHARACTER,INTEGER,LONG,FLOAT,DOUBLE,FOO,value),classLoader,isDeclaredBy(Simple.class));
  assertThat(dynamicType.getLoaded().getDeclaredFields().length,is(10));
  assertThat(dynamicType.getLoaded().newInstance().foo(),is("" + BOOLEAN + BYTE+ SHORT+ CHARACTER+ INTEGER+ LONG+ FLOAT+ DOUBLE+ FOO+ value));
}
