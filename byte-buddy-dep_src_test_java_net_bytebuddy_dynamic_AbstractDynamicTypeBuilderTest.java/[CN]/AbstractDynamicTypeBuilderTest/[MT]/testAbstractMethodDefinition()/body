{
  Class<?> type=create().modifiers(Visibility.PUBLIC,TypeManifestation.ABSTRACT).defineMethod(FOO,Object.class,Collections.<Class<?>>emptyList(),Visibility.PUBLIC).throwing(Exception.class).withoutCode().make().load(new URLClassLoader(new URL[0],null),ClassLoadingStrategy.Default.WRAPPER).getLoaded();
  Method method=type.getDeclaredMethod(FOO);
  assertEquals(Object.class,method.getReturnType());
  assertArrayEquals(new Class<?>[]{Exception.class},method.getExceptionTypes());
  assertThat(method.getModifiers(),is(Modifier.PUBLIC | Modifier.ABSTRACT));
}
