{
  Class<?> type=createPlain().modifiers(Visibility.PUBLIC,TypeManifestation.ABSTRACT).defineMethod(FOO,Object.class,Visibility.PUBLIC).throwing(Exception.class).withoutCode().make().load(new URLClassLoader(new URL[0],null),ClassLoadingStrategy.Default.WRAPPER).getLoaded();
  Method method=type.getDeclaredMethod(FOO);
  assertThat(method.getReturnType(),CoreMatchers.<Class<?>>is(Object.class));
  assertThat(method.getExceptionTypes(),is(new Class<?>[]{Exception.class}));
  assertThat(method.getModifiers(),is(Modifier.PUBLIC | Modifier.ABSTRACT));
}
