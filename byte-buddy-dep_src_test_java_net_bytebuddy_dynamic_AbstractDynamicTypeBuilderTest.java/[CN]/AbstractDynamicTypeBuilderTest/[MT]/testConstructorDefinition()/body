{
  Class<?> type=createPlain().defineConstructor(Collections.<Class<?>>singletonList(Void.class),Visibility.PUBLIC).throwing(Exception.class).intercept(MethodCall.invoke(Object.class.getDeclaredConstructor())).make().load(new URLClassLoader(new URL[0],null),ClassLoadingStrategy.Default.WRAPPER).getLoaded();
  Constructor<?> constructor=type.getDeclaredConstructor(Void.class);
  assertThat(constructor.getExceptionTypes(),is(new Class<?>[]{Exception.class}));
  assertThat(constructor.getModifiers(),is(Modifier.PUBLIC));
  assertThat(constructor.newInstance((Object)null),notNullValue(Object.class));
}
