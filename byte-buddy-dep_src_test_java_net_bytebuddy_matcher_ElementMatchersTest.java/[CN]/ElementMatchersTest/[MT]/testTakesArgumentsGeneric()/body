{
  assertThat(ElementMatchers.takesGenericArguments(GenericType.class.getTypeParameters()[0]).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(true));
  assertThat(ElementMatchers.takesGenericArguments(GenericTypeDescription.Sort.describe(GenericType.class.getTypeParameters()[0])).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(true));
  assertThat(ElementMatchers.takesGenericArguments(Exception.class).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(false));
  assertThat(ElementMatchers.takesGenericArguments(Collections.singletonList(new TypeDescription.ForLoadedType(Exception.class))).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(false));
  assertThat(ElementMatchers.takesArguments(Exception.class).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(true));
  assertThat(ElementMatchers.takesArguments(Collections.singletonList(new TypeDescription.ForLoadedType(Exception.class))).matches(new MethodDescription.ForLoadedMethod(GenericType.class.getDeclaredMethod(FOO,Exception.class))),is(true));
}
