{
  if (typeLocator.equals(AgentBuilder.TypeLocator.ClassLoading.INSTANCE)) {
    return;
  }
  assertThat(ByteBuddyAgent.install(),instanceOf(Instrumentation.class));
  assertThat(classLoader.loadClass(SimpleType.class.getName()).getName(),is(SimpleType.class.getName()));
  ClassFileTransformer classFileTransformer=new AgentBuilder.Default().with(typeLocator).with(AgentBuilder.InitializationStrategy.NoOp.INSTANCE).with(AgentBuilder.TypeStrategy.Default.REDEFINE).with(AgentBuilder.RedefinitionStrategy.REDEFINITION).type(isAnnotatedWith(ShouldRebase.class),ElementMatchers.is(classLoader)).transform(new FooTransformer()).installOnByteBuddyAgent();
  try {
    Class<?> type=classLoader.loadClass(SimpleType.class.getName());
    assertThat(type.getDeclaredMethod(FOO).invoke(type.newInstance()),is((Object)BAR));
  }
  finally {
    ByteBuddyAgent.getInstrumentation().removeTransformer(classFileTransformer);
  }
}
