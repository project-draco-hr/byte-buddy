{
  assertThat(ByteBuddyAgent.install(),instanceOf(Instrumentation.class));
  ClassFileTransformer classFileTransformer=new AgentBuilder.Default().rebase(isAnnotatedWith(ShouldRebase.class),ElementMatchers.is(classLoader)).transform(new BarTransformer()).installOnByteBuddyAgent();
  try {
    Class<?> type=classLoader.loadClass(Bar.class.getName());
    assertThat(type.getDeclaredMethod(FOO).invoke(type.newInstance()),is((Object)BAR));
  }
  finally {
    ByteBuddyAgent.getInstrumentation().removeTransformer(classFileTransformer);
  }
}
