{
  assertThat(ByteBuddyAgent.install(),instanceOf(Instrumentation.class));
  ClassFileTransformer classFileTransformer=new AgentBuilder.Default().with(binaryLocator).type(isAnnotatedWith(ShouldRebase.class),ElementMatchers.is(classLoader)).transform(new QuxBazTransformer()).installOnByteBuddyAgent();
  try {
    Class<?> type=classLoader.loadClass(QuxBaz.class.getName());
    assertThat(type.getDeclaredMethod(FOO).invoke(type.newInstance()),is((Object)(FOO + BAR)));
  }
  finally {
    ByteBuddyAgent.getInstrumentation().removeTransformer(classFileTransformer);
  }
}
