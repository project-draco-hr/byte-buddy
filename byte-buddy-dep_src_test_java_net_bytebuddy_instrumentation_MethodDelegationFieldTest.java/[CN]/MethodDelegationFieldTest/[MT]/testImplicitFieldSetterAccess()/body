{
  DynamicType.Loaded<ImplicitSetter> loaded=instrument(ImplicitSetter.class,MethodDelegation.to(SetInterceptor.class).appendParameterBinder(Field.Binder.install(Get.class,Set.class)));
  ImplicitSetter implicitSetter=loaded.getLoaded().newInstance();
  assertThat(implicitSetter.foo,is(FOO));
  implicitSetter.setFoo(BAR);
  assertThat(implicitSetter.foo,is(FOO + BAR));
}
